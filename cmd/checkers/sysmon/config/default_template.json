{
  "listen_addr": "0.0.0.0:50083",
  "security": {
    "mode": "mtls",
    "cert_dir": "/etc/serviceradar/certs",
    "cert_file": "sysmon.pem",
    "key_file": "sysmon-key.pem",
    "ca_file": "root.pem",
    "client_ca_file": "root.pem"
  },
  "poll_interval": 30,
  "zfs": {
    "enabled": false,
    "pools": [],
    "include_datasets": false,
    "use_libzetta": false
  },
  "filesystems": [
    {
      "name": "/",
      "type": "ext4",
      "monitor": true
    }
  ]
}
