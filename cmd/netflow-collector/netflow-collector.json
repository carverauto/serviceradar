{
  "listen_addr": "0.0.0.0:2055",
  "buffer_size": 65536,
  "nats_url": "nats://127.0.0.1:4222",
  "stream_name": "flows",
  "subject": "flows.raw.netflow",
  "partition": "default",
  "channel_size": 10000,
  "batch_size": 100,
  "publish_timeout_ms": 5000,
  "drop_policy": "drop_oldest",
  "security": {
    "mode": "mtls",
    "cert_dir": "/etc/serviceradar/certs",
    "tls": {
      "cert_file": "client.crt",
      "key_file": "client.key",
      "ca_file": "ca.crt"
    }
  },
  "metrics_addr": "0.0.0.0:9091"
}
