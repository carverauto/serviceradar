{
  "proton_url": "http://localhost:3000",
  "listen_addr": "0.0.0.0:50053",
  "core_address": "http://localhost:50052",
  "forward_to_core": true,
  "poll_interval": 30,
  "security": {
    "tls_enabled": true,
    "cert_file": "/etc/serviceradar/certs/server.crt",
    "key_file": "/etc/serviceradar/certs/server.key",
    "ca_file": "/etc/serviceradar/certs/ca.crt"
  },
  "agents": {
    "local-agent": {
      "address": "localhost:50051",
      "checks": [
        {
          "service_type": "grpc",
          "service_name": "sysmon",
          "details": "localhost:50060"
        },
        {
          "service_type": "grpc",
          "service_name": "rperf-checker",
          "details": "localhost:50061"
        }
      ]
    },
    "remote-agent-1": {
      "address": "10.0.0.5:50051",
      "checks": [
        {
          "service_type": "grpc",
          "service_name": "sysmon",
          "details": "10.0.0.5:50060"
        }
      ]
    }
  }
}