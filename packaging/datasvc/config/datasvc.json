{
  "listen_addr": ":50057",
  "nats_url": "nats://127.0.0.1:4222",
  "security": {
    "mode": "mtls",
    "cert_dir": "/etc/serviceradar/certs",
    "server_name": "PLACEHOLDER_NATS_SERVER_NAME",
    "role": "datasvc",
    "tls": {
      "cert_file": "datasvc.pem",
      "key_file": "datasvc-key.pem",
      "ca_file": "root.pem",
      "client_ca_file": "root.pem"
    }
  },
  "rbac": {
    "roles": [
      {"identity": "CN=PLACEHOLDER_IDENTITY,O=ServiceRadar", "role": "reader"}
    ]
  },
  "bucket": "serviceradar-datasvc",
  "bucket_history": 1,
  "bucket_ttl": "24h",
  "bucket_max_bytes": 5368709120
}
