# Pre-install script for ServiceRadar sysmon-vm macOS package
# This script is executed before the package files are installed.
# Used to gracefully stop the existing service before upgrade.

set -e

SERVICE_TARGET="system/com.serviceradar.sysmonvm"

log() {
    echo "[preinstall] $*"
}

log "Preparing for sysmon-vm installation..."

# Stop existing service if running (ignore errors if not present)
if launchctl print "${SERVICE_TARGET}" >/dev/null 2>&1; then
    log "Stopping existing sysmon-vm service..."
    launchctl bootout "${SERVICE_TARGET}" 2>/dev/null || true
    sleep 1
    log "Existing service stopped"
else
    log "No existing service found, proceeding with fresh install"
fi

log "Pre-install complete"
exit 0
