[Unit]
Description=ServiceRadar Mapper Service
After=network.target

[Service]
Type=simple
User=serviceradar
ExecStart=/usr/local/bin/serviceradar-mapper -config /etc/serviceradar/mapper.json
Restart=always
RestartSec=10
LimitNPROC=512
LimitNOFILE=65535

StandardOutput=append:/var/log/serviceradar/mapper.log
StandardError=append:/var/log/serviceradar/mapper-error.log

[Install]
WantedBy=multi-user.target
