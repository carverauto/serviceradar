{
  "listen_addr": "changeme:50081",
  "name": "rperf-checker",
  "type": "grpc",
  "timeout": "30s",
  "security": {
    "tls_enabled": true,
    "cert_file": "/etc/serviceradar/certs/rperf-checker.pem",
    "key_file": "/etc/serviceradar/certs/rperf-checker-key.pem",
    "ca_file": "/etc/serviceradar/certs/root.pem"
  },
  "default_poll_interval": 300,
  "targets": [
    {
      "name": "TCP Test",
      "address": "<changeme - target address (rperf server)>",
      "port": 5199,
      "tcp_port_pool": "5200-5210",
      "protocol": "tcp",
      "reverse": false,
      "bandwidth": 1000000,
      "duration": 10.0,
      "parallel": 1,
      "length": 0,
      "omit": 1,
      "no_delay": true,
      "send_buffer": 0,
      "receive_buffer": 0,
      "send_interval": 0.05,
      "poll_interval": 300
    },
    {
      "name": "UDP Test",
      "address": "<changeme - target address (rperf server)>",
      "udp_port_pool": "5200-5210",
      "port": 5199,
      "protocol": "udp",
      "reverse": false,
      "bandwidth": 1000000,
      "duration": 5.0,
      "parallel": 1,
      "length": 1024,
      "omit": 0,
      "no_delay": false,
      "send_buffer": 0,
      "receive_buffer": 0,
      "send_interval": 0.05,
      "poll_interval": 600
    }
  ]
}