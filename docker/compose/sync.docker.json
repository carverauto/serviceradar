{
  "kv_address": "kv:50057",
  "listen_addr": ":50058",
  "poll_interval": "5m",
  "discovery_interval": "5m",
  "update_interval": "10m",
  "agent_id": "docker-agent",
  "poller_id": "docker-poller",
  "nats_url": "tls://nats:4222",
  "security": {
    "mode": "mtls",
    "cert_dir": "/etc/serviceradar/certs",
    "server_name": "kv.serviceradar",
    "role": "poller",
    "tls": {
      "cert_file": "/etc/serviceradar/certs/sync.pem",
      "key_file": "/etc/serviceradar/certs/sync-key.pem",
      "ca_file": "/etc/serviceradar/certs/root.pem",
      "client_ca_file": "/etc/serviceradar/certs/root.pem"
    }
  },
  "nats_security": {
    "mode": "mtls",
    "cert_dir": "/etc/serviceradar/certs",
    "server_name": "nats.serviceradar",
    "role": "poller",
    "tls": {
      "cert_file": "/etc/serviceradar/certs/sync.pem",
      "key_file": "/etc/serviceradar/certs/sync-key.pem",
      "ca_file": "/etc/serviceradar/certs/root.pem",
      "client_ca_file": "/etc/serviceradar/certs/root.pem"
    }
  },
  "sources": {
    "armis": {
      "type": "armis",
      "endpoint": "http://faker:8080",
      "prefix": "armis/",
      "poll_interval": "5m",
      "sweep_interval": "5m",
      "agent_id": "docker-agent",
      "poller_id": "docker-poller",
      "partition": "default",
      "credentials": {
        "username": "test",
        "password": "test"
      },
      "page_size": 1000,
      "network_blacklist": [],
      "queries": [
        {
          "label": "all_devices",
          "query": "in:devices",
          "sweep_modes": ["icmp", "tcp"]
        }
      ]
    }
  },
  "logging": {
    "level": "debug",
    "debug": true,
    "output": "stdout",
    "time_format": "",
    "otel": {
      "enabled": false,
      "endpoint": "localhost:4317",
      "service_name": "serviceradar-sync",
      "batch_timeout": "5s",
      "insecure": true,
      "headers": {
        "x-api-key": "your-collector-api-key"
      }
    }
  }
}