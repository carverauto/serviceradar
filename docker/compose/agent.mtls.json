{
  "checkers_dir": "/etc/serviceradar/checkers",
  "agent_id": "docker-agent",
  "agent_name": "agent",
  "host_ip": "agent",
  "partition": "default",
  "gateway_addr": "agent-gateway:50052",
  "push_interval": "30s",
  "gateway_security": {
    "mode": "mtls",
    "cert_dir": "/etc/serviceradar/certs",
    "server_name": "agent-gateway.serviceradar",
    "role": "agent",
    "tls": {
      "cert_file": "tenants/default/components/agent-001-default-chain.pem",
      "key_file": "tenants/default/components/agent-001-default-key.pem",
      "ca_file": "root.pem"
    }
  },
  "security": {
    "mode": "mtls",
    "cert_dir": "/etc/serviceradar/certs",
    "server_name": "agent.serviceradar",
    "role": "agent",
    "tls": {
      "cert_file": "/etc/serviceradar/certs/agent.pem",
      "key_file": "/etc/serviceradar/certs/agent-key.pem",
      "ca_file": "/etc/serviceradar/certs/root.pem",
      "client_ca_file": "/etc/serviceradar/certs/root.pem"
    }
  },
  "logging": {
    "level": "info",
    "debug": false,
    "output": "stdout",
    "time_format": "",
    "otel": {
      "enabled": false,
      "endpoint": "",
      "service_name": "serviceradar-agent",
      "batch_timeout": "5s",
      "insecure": false,
      "tls": {
        "cert_file": "/etc/serviceradar/certs/agent.pem",
        "key_file": "/etc/serviceradar/certs/agent-key.pem",
        "ca_file": "/etc/serviceradar/certs/root.pem"
      }
    }
  }
}
