FROM golang:1.22-alpine AS build
WORKDIR /src
COPY go.mod go.sum ./
RUN go mod download
COPY cmd/cli ./cmd/cli
COPY pkg/cli ./pkg/cli
RUN CGO_ENABLED=0 GOOS=linux go build -o /out/serviceradar-cli ./cmd/cli

FROM alpine:3.20
RUN adduser -D -u 10001 app
USER app
WORKDIR /app
COPY --from=build /out/serviceradar-cli /usr/local/bin/serviceradar-cli
ENTRYPOINT ["/usr/local/bin/serviceradar-cli","render-kong"]
