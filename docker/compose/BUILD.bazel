"""Expose compose assets to Bazel targets."""

package(default_visibility = ["//visibility:public"])

exports_files(
    glob(
        [
            "entrypoint-*.sh",
            "*.docker.json",
            "*.docker.toml",
            "*.sh",
            "*.ts",
            "*.rs",
        ],
        allow_empty = True,
        exclude = ["Dockerfile.*"],
    ),
)

exports_files(["nginx.conf.template"])
