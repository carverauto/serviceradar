{
  "checkers_dir": "/etc/serviceradar/checkers",
  "agent_id": "docker-agent",
  "agent_name": "agent",
  "host_ip": "agent",
  "partition": "default",
  "gateway_addr": "agent-gateway:50052",
  "push_interval": "30s",
  "gateway_security": {
    "mode": "spiffe",
    "cert_dir": "/etc/serviceradar/certs",
    "trust_domain": "carverauto.dev",
    "server_spiffe_id": "spiffe://carverauto.dev/services/agent-gateway",
    "workload_socket": "unix:///run/spire/sockets/agent.sock",
    "role": "client"
  },
  "kv_address": "serviceradar-datasvc:50057",
  "kv_security": {
    "mode": "spiffe",
    "cert_dir": "/etc/serviceradar/certs",
    "trust_domain": "carverauto.dev",
    "server_spiffe_id": "spiffe://carverauto.dev/services/datasvc",
    "workload_socket": "unix:///run/spire/sockets/agent.sock",
    "role": "client"
  },
  "logging": {
    "level": "info",
    "debug": false,
    "output": "stdout",
    "time_format": "",
    "otel": {
      "enabled": false,
      "endpoint": "",
      "service_name": "serviceradar-agent",
      "batch_timeout": "5s",
      "insecure": false,
      "tls": {
        "cert_file": "/etc/serviceradar/certs/agent.pem",
        "key_file": "/etc/serviceradar/certs/agent-key.pem",
        "ca_file": "/etc/serviceradar/certs/root.pem"
      }
    }
  }
}
