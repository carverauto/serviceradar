package(default_visibility = ["//visibility:public"])

# Complete OCaml stdlib including std_exit and runtime libraries
filegroup(
    name = "all_files",
    srcs = glob([
        "*.cmi",
        "*.cmx",
        "*.cmxa",
        "*.cma",
        "*.cmo",
        "*.ml",
        "*.mli",
        "*.cmt",
        "*.cmti",
        "*.a",
        "*.o",
    ]),
)

filegroup(
    name = "stdlib_runtime",
    srcs = glob([
        "*.a",
        "*.o",
    ]),
)

filegroup(
    name = "stdlib_interfaces",
    srcs = glob([
        "*.cmi",
        "*.mli",
    ]),
)

filegroup(
    name = "stdlib_compiled",
    srcs = glob([
        "*.cmx",
        "*.cmxa",
        "*.cma",
        "*.cmo",
    ]),
)

