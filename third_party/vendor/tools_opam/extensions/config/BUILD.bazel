load("@makeheaders//rules:makeheaders.bzl", "makeheaders")
load("@rules_cc//cc:defs.bzl", "cc_binary")
load(
    "//config/cc:CONFIG.bzl",
    "BASE_COPTS",
    "BASE_LINKOPTS",
    "PROFILE",
    "define_module_version",
)

