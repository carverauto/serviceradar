makeheaders(
    name = "mkhdrs",
    additional_srcs = [
        "//lib:tools_opam.h",
        "@liblogc//macros:ansi_colors.h",
    ] + select({
        "@obazl_tools_cc//profile:dev?": [
            "@liblogc//macros:logging_debug.h",
        ],
        "//conditions:default": [
            "@liblogc//macros:logging_ndebug.h",
        ],
    }),
    hdrs_srcs = [
        "main.c",
        "config_pkg.c",
        "ext_emit_build_bazel.c",
    ],
)
