cc_library(
    name = "tools_opam",
    srcs = [
        "emit_build_bazel.c",
        "emit_ocamlsdk.c",
        "emit_pkg_bindir.c",
        "spawn_cmd.c",
        "utils.c",
        "versions.c",
        ":mkhdrs",
        "dune-package.c",
        # "//lib/templates/compiler_libs",
        # "//lib/templates/ocamlsdk",
        # "//lib/templates/toolchain",
    ],
    hdrs = ["tools_opam.h"],
    copts = BASE_COPTS + [
        # "-ftime-report"
        # only for clang 15/
        # "-Wno-gnu-statement-expression-from-macro-expansion"
    ],
    data = [
        "//lib/templates/compiler_libs:buildfiles",
        "//lib/templates/ocamlsdk:buildfiles",
        "//lib/templates/toolchain:buildfiles",
    ],
    defines = PROFILE + select({
        ## for dirent->d_type macros:
        "@platforms//os:linux": ["_DEFAULT_SOURCE"],
        "//conditions:default": [],
    }),
    # linkopts = select({
    #     # static linkage under -c opt: we need to retain
    #     # one symbol from libdune_s7:
    #     "@platforms//os:macos": [
    #         "-Xlinker", "-exported_symbol",
    #         "-Xlinker", "'_libdune_s7_init'"],
    #     "//conditions:default": []
    # }),
    implementation_deps = [
        "@findlibc//lib:findlibc",
        "@runfiles//lib:runfiles",
        "@sfsexp//src:sfsexp",
    ],
    includes = [
        ".",
        "$(GENDIR)",
    ],
    local_defines = [
        "BAZEL_CURRENT_REPOSITORY=\\\"{}\\\"".format(package_relative_label("@tools_opam").repo_name),
    ],
    visibility = ["//visibility:public"],
    alwayslink = True,
)

makeheaders(
    name = "mkhdrs",
    additional_srcs = [
        # "//lib/templates/compiler_libs",
        # "//lib/templates/ocamlsdk",
        # "//lib/templates/toolchain",
        "@liblogc//macros:ansi_colors.h",
    ] + select({
        "@obazl_tools_cc//profile:dev?": [
            "@liblogc//macros:logging_debug.h",
            # "@libs7//macros:s7_logging_debug.h"
        ],
        "//conditions:default": [
            "@liblogc//macros:logging_ndebug.h",
            # "@libs7//macros:s7_logging_ndebug.h"
        ],
    }),
    hdrs_srcs = [
        "emit_build_bazel.c",
        "emit_ocamlsdk.c",
        "emit_pkg_bindir.c",
        "spawn_cmd.c",
        "utils.c",
        "versions.c",
        "dune-package.c",
    ],
    visibility = ["//visibility:public"],
)

makeheaders(
    name = "mkhdrs_export",
    out = "tools_opam.h",
    additional_srcs = [
        "@liblogc//macros:ansi_colors.h",
    ] + select({
        "@obazl_tools_cc//profile:dev?": [
            "@liblogc//macros:logging_debug.h",
        ],
        "//conditions:default": [
            "@liblogc//macros:logging_ndebug.h",
        ],
    }),
    export_interface = True,
    hdrs_srcs = [
        "emit_build_bazel.c",
        "emit_ocamlsdk.c",
        "emit_pkg_bindir.c",
        "spawn_cmd.c",
        "utils.c",
        "versions.c",
    ],
    visibility = ["//visibility:public"],
