[Unit]
Description=ServiceRadar sysmon-osx checker
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
ExecStart=/usr/local/bin/serviceradar-sysmon-osx --config /etc/serviceradar/checkers/sysmon-osx.json
Restart=always
RestartSec=5
AmbientCapabilities=CAP_NET_BIND_SERVICE
NoNewPrivileges=yes
LimitNOFILE=32768

[Install]
WantedBy=multi-user.target
